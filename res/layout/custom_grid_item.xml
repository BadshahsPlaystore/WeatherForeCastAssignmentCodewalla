<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearCustomItem"
    android:layout_width="175sp"
    android:layout_height="wrap_content"
    android:background="#34495e"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewDateCustomGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:text="Date"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ecf0f1"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/imageViewIconCustomGrid"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginTop="7sp"
        android:contentDescription="ImageViewIconCD"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textViewDescriptionCustomGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7sp"
        android:text="Sky is Clear"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#e74c3c"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5sp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewLabelTempMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center_horizontal"
                android:text="Temp Max"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ecf0f1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textViewValueTempMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                android:text="35"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ecf0f1"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewLabelTempMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                android:text="Temp Min"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ecf0f1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textViewValueTempMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                android:text="32"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ecf0f1"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewLabelWindSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:text="Wind Speed"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ecf0f1"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textViewValueWindSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:text="35"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ecf0f1"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>