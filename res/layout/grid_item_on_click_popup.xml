<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearCustomItem"
    android:layout_width="300sp"
    android:layout_height="wrap_content"
    android:background="#34495e"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewDateCustomGridPopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Date"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ecf0f1" />

    <TextView
        android:id="@+id/textViewDescriptionCustomGridPopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Sky is Clear"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ecf0f1" />

    <ImageView
        android:id="@+id/imageViewIconCustomGridPopUP"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginTop="10sp"
        android:contentDescription="ImageViewIconCD"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20sp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textViewLabelTempMax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Temp Max"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ecf0f1" />

                <TextView
                    android:id="@+id/textViewValueTempMaxPopUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="35"
                    android:layout_gravity="center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ecf0f1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textViewLabelTempMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Temp Min"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ecf0f1" />

                <TextView
                    android:id="@+id/textViewValueTempMinPopUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10sp"
                    android:text="32"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ecf0f1" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20sp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textViewLabelTempDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                    android:layout_marginTop="10sp"
                    android:text="Temp Day"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ecf0f1" />

                <TextView
                    android:id="@+id/textViewValueTempDayPopUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10sp"
                    android:text="32"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ecf0f1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textViewLabelTempMorning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Temp Morn"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ecf0f1" />

                <TextView
                    android:id="@+id/textViewValueTempMornPopUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10sp"
                    android:text="32"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ecf0f1" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20sp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textViewLabelTempEve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Temp Eve"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ecf0f1" />

                <TextView
                    android:id="@+id/textViewValueTempEvePopUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10sp"
                    android:text="32"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ecf0f1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textViewLabelTempNight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Temp Night"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ecf0f1" />

                <TextView
                    android:id="@+id/textViewValueTempNightPopUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10sp"
                    android:text="32"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ecf0f1" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="50sp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textViewLabelHumidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_gravity="center_horizontal"
                    android:text="Humidity"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ecf0f1" />

                <TextView
                    android:id="@+id/textViewValueHumidityPopUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_gravity="center_horizontal"
                    android:text="2.8"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ecf0f1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textViewLabelClouds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Clouds"
                    android:layout_gravity="center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ecf0f1" />

                <TextView
                    android:id="@+id/textViewValueCloudsPopUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="2.8"
                    android:layout_gravity="center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ecf0f1" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewLabelWindSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Wind Speed"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ecf0f1" />

            <TextView
                android:id="@+id/textViewValueWindSpeedPopUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="2.8"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ecf0f1" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>